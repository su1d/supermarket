<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.mapper.SystemUserMapper">


    <select id="getAllUsers" resultType="com.system.pojo.SystemUser">
        select * from system_user;
    </select>

    <select id="checkLogin" resultType="com.system.pojo.SystemUser">
        select * from system_user where username=#{username} and password=#{password} limit 1;
    </select>
</mapper>